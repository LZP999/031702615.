#include<stdio.h>
#define max(a,b)=a>b?a:b
#include<math.h>
int main()
{
	int a[5], b[5], c[5], d[5], m, n, o, t , T, h;
	for (int i = 0; i < 5; i++)
	{
		scanf("%d %d %d",&a[i],&b[i],&c[i]);
	}//先输入五个请求//
	for (int k = 0; k < 4; k++)
	{
		for (int l = 0; l < 4-k; l++)
		{
			if (a[l] > a[l + 1])
			{
				m = a[l];
				a[l] = a[l + 1];
				a[l + 1] = m;
				n = b[l];
				b[l] = b[l + 1];
				b[l + 1] = n;
				o = c[l];
				c[l] = c[l + 1];
				c[l + 1] = o;
			}
		}
	}//先把五个请求按从早到晚的顺序排列//
	for (int j = 0; j < 5; j++)
	{
		a[j] = a[j] - a[0];//把所有的请求的时间都减去最早请求人的时间//
	}
	t = b[0] + abs(c[0] - b[0]);
	T = b[0] + abs(c[0] - b[0]);
	for (int p = 1; p < 5; p++)
	{
		t = t + T - a[p] + abs(c[p - 1] - b[p]) + abs(c[p] - b[p]) + 1;//等待的时间和//
		T = T + abs(c[p - 1] - b[p]) + abs(c[p] - b[p]);//接完一个乘客后的时刻//
	}
	printf("%d",t);
	return 0;
}
